<configuration>
    <appender name ="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH::mm:SS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level ="info">
        <appender-ref ref="KAFKA"/>
    </root>
</configuration>